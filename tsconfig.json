{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,

    "module": "esnext",

    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "paths": {
      "@/*": ["./src/*"]
    },

    "noEmit": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "backend/node_modules",
    "backend/generated",
    ".expo"
  ]
}
